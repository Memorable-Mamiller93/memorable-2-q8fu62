# Memorable Web Application Environment Configuration
# Version: 1.0.0

# =========================================
# Core Application Settings
# =========================================
# Environment mode (development/staging/production)
VITE_NODE_ENV=development

# =========================================
# API Configuration
# =========================================
# Base URL for the API gateway (format: https://api.domain.com)
VITE_API_BASE_URL=http://localhost:3000

# API version (format: v1)
VITE_API_VERSION=v1

# API request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# API rate limit requests per minute (default: 100)
VITE_API_RATE_LIMIT=100

# =========================================
# Theme Configuration
# =========================================
# Default theme mode (light/dark/high-contrast)
VITE_DEFAULT_THEME_MODE=light

# Enable high contrast mode (true/false)
VITE_HIGH_CONTRAST_MODE=false

# Enable reduced motion for accessibility (true/false)
VITE_REDUCED_MOTION=false

# =========================================
# Feature Flags
# =========================================
# Enable AI story generation feature (true/false)
VITE_FEATURE_AI_GENERATION=true

# Enable photo upload feature (true/false)
VITE_FEATURE_PHOTO_UPLOAD=true

# Enable real-time preview (true/false)
VITE_FEATURE_REALTIME_PREVIEW=true

# =========================================
# Analytics & Monitoring
# =========================================
# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

# Analytics tracking ID (format: UA-XXXXXXXXX-X)
VITE_ANALYTICS_ID=

# Error reporting level (none/warning/error/all)
VITE_ERROR_REPORTING_LEVEL=error

# =========================================
# Security Configuration
# =========================================
# Enable Content Security Policy (true/false)
VITE_CSP_ENABLED=true

# CSP Report Only mode (true/false)
VITE_CSP_REPORT_ONLY=false

# CSP Report URI
VITE_CSP_REPORT_URI=

# =========================================
# Payment Integration
# =========================================
# Stripe public key for payment processing
VITE_STRIPE_PUBLIC_KEY=pk_test_

# =========================================
# Performance Configuration
# =========================================
# Cache duration in seconds (default: 3600)
VITE_CACHE_DURATION=3600

# Maximum concurrent API requests
VITE_MAX_CONCURRENT_REQUESTS=10

# Enable debug mode (true/false)
VITE_ENABLE_DEBUG=false

# =========================================
# Content Delivery
# =========================================
# CDN base URL for static assets
VITE_CDN_URL=

# Maximum image upload size in bytes (default: 5MB)
VITE_MAX_UPLOAD_SIZE=5242880

# Supported image formats (comma-separated)
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,heif

# =========================================
# Print Service Configuration
# =========================================
# Print service API endpoint
VITE_PRINT_SERVICE_URL=

# Print job status check interval (ms)
VITE_PRINT_STATUS_INTERVAL=30000

# =========================================
# Development Tools
# =========================================
# Enable React Developer Tools (development only)
VITE_ENABLE_REACT_DEVTOOLS=false

# Enable API mocking (development only)
VITE_ENABLE_API_MOCKING=false

# Mock API delay (ms, development only)
VITE_MOCK_API_DELAY=1000