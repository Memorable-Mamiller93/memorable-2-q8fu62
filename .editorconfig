# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript and TypeScript React files
[*.{ts,tsx}]
indent_size = 2
quote_type = single
max_line_length = 120
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = 1tbs

# Python files
[*.py]
indent_size = 4
max_line_length = 88
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = pep8

# JSON files
[*.json]
indent_size = 2
max_line_length = 120
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120
quote_type = single

# CSS files
[*.css]
indent_size = 2
max_line_length = 120
quote_type = single
space_around_selector_separator = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# Configuration files
[{package.json,.travis.yml}]
indent_size = 2

# Documentation files
[{README.md,CHANGELOG.md,CONTRIBUTING.md,LICENSE}]
max_line_length = off

# Git configuration files
[.git*]
indent_style = tab

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = true